root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
tab_width = 4
trim_trailing_whitespace = true

[*.gradle]
indent_style = tab

[*.java]
indent_style = tab

[*.tiny]
indent_style = tab

[*.json]
indent_style = tab

[*.{mapping,mappings}]
indent_style = tab

[*.toml]
indent_style = tab
tab_width = 2

[.editorconfig]
indent_style = space
indent_size = 4
